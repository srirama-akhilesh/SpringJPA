pipeline {
agent any

tools{
    maven 'maven3.6.3'
    jdk 'JDK13'
}

def gitBranch = 'develop'

parameters {
        choice(name: 'BRANCH', choices: ['master', 'develop'], description: 'Select branch')

    }
    
gitBranch = params.BRANCH    
    
stages {

stage ("initialize") {
    steps {
        sh '''
        echo "PATH = ${PATH}"
        echo "M2_HOME = ${M2_HOME}"
        echo "Branch: ${params.BRANCH}"
        '''
    }
}

stage ('Checkout') {
   steps {
     git branch: "{gitBranch}", url: "https://github.com/srirama-akhilesh/SpringJPA.git"
   }    
}

stage ('Compile Stage') {
    steps {
      sh 'mvn clean verify'
    }
}

stage ('Testing Stage') {
    steps {
      sh 'mvn test'  
    }
}

stage ('Install Stage') {
    steps {
          sh 'mvn install'  
      }
}

}
}
